---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro'
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<section class="w-full mx-auto lg:w-[740px] py-44 ">
			<img 
				class="rounded-full w-12 h-12 mb-4"
				src="https://media.licdn.com/dms/image/C4E03AQHVKQNTwva_kA/profile-displayphoto-shrink_100_100/0/1633640162418?e=1718236800&v=beta&t=0_mzQNbURpdygnPQNmS3Ni5HrdzJ3rwSTku6sQ3mF4A" 
				alt="luis fernando photo" 
			/>
			<h1 class="text-white text-5xl font-bold flex-row gap-x-4 pb-4">
				Hey, I'm Luis <a
					href="https://www.linkedin.com/in/luisinfanzonm/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center">
					<Badge>Open to Work</Badge>
				</a>
			</h1>
			<h2 class="text-2xl opacity-80 text-wrap">
				<span>Experienced Web Developer.</span>
				<span class="text-yellow-200/90"> Proficient in JavaScript (React), PHP and WordPress Development.</span>
				<span class="text-red-200/90"> Innovator in Web Solutions and Digital Transformation.</span>
			</h2>
		
			<ul>
				<li>
					<a href="https://www.linkedin.com/in/luisinfanzonm/">
					</a>
				</li>
			</ul>
		</section>
	</main>
</Layout>

